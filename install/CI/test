set -e
echo "" > coverage.txt

for testpkg in $(go list ./file/pkg/service/... ./backend/pkg/service/... ./api/...); do
  go test -race -covermode=atomic -coverprofile=profile.out "$testpkg"
  if [ -f profile.out ]; then
    cat profile.out >> coverage.txt
    rm profile.out
  fi
done
